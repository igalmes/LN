<h1>Editar Repuesto</h1>

<form action="/repuestos/editar/<%= repuesto.id %>" method="POST">
  <input type="text" name="nombre" placeholder="Nombre" required class="form-control mb-2" value="<%= repuesto.nombre %>">
  <input type="text" name="marca" placeholder="Marca" class="form-control mb-2" value="<%= repuesto.marca %>">

  <select name="categoria_id" class="form-control mb-2" required>
    <% categorias.forEach(c => { %>
      <option value="<%= c.id %>" <%= c.id === repuesto.categoria_id ? 'selected' : '' %>><%= c.nombre %></option>
    <% }) %>
  </select>

  <select name="proveedor_id" class="form-control mb-2" required>
    <% proveedores.forEach(p => { %>
      <option value="<%= p.id %>" <%= p.id === repuesto.proveedor_id ? 'selected' : '' %>><%= p.nombre %></option>
    <% }) %>
  </select>

  <input type="number" name="stock_minimo" placeholder="Stock mínimo" class="form-control mb-2" value="<%= repuesto.stock_minimo %>">
  <input type="number" name="precio_compra" placeholder="Precio compra" class="form-control mb-2" value="<%= repuesto.precio_compra %>">
  <input type="number" name="precio_venta" placeholder="Precio venta" class="form-control mb-2" value="<%= repuesto.precio_venta %>">
  <input type="text" name="ubicacion" placeholder="Ubicación" class="form-control mb-2" value="<%= repuesto.ubicacion %>">

  <button class="btn btn-primary">Actualizar</button>
</form>
